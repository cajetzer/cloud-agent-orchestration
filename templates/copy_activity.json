{
  "name": "copy_activity_template",
  "properties": {
    "description": "Template: Copy data between sources",
    "activities": [
      {
        "name": "CopyData",
        "type": "Copy",
        "dependsOn": [],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 3,
          "retryIntervalInSeconds": 30,
          "secureOutput": false,
          "secureInput": false
        },
        "typeProperties": {
          "source": {
            "type": "BlobSource",
            "recursive": true
          },
          "sink": {
            "type": "SqlSink",
            "writeBatchSize": 10000,
            "writeBatchTimeout": "00:30:00"
          },
          "enableStaging": false
        },
        "inputs": [
          {
            "referenceName": "SourceDataset",
            "type": "DatasetReference"
          }
        ],
        "outputs": [
          {
            "referenceName": "SinkDataset",
            "type": "DatasetReference"
          }
        ]
      }
    ],
    "parameters": {
      "sourcePath": { "type": "String", "defaultValue": "" },
      "sinkTable": { "type": "String", "defaultValue": "" }
    },
    "annotations": ["template", "copy-pipeline"],
    "folder": { "name": "generated" }
  }
}
